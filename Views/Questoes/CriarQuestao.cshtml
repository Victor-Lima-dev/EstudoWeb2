@model Questao

<h1>Criar Questão</h1>

<form method="post" asp-action="Criar">
    <div class="form-group">
        <label for="enunciado">Enunciado:</label>
        <textarea class="form-control" id="enunciado" name="enunciado" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label for="resposta">Resposta:</label>
        <textarea class="form-control" id="resposta" name="resposta" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label for="materiaId">Matéria:</label>
        <select class="form-control" id="materiaId" name="materiaId" required>
            <option value="">Selecione uma matéria</option>
            @foreach (var materia in ViewData["Materias"] as List<Materia>)
            {
                <option value="@materia.MateriaId">@materia.Nome</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>
