@model Card

<h1>Editar Card</h1>

<form asp-action="EditarT" asp-route-id="@Model.CardId" method="post">
    <div class="form-group">
        <label asp-for="Enunciado">Enunciado:</label>
        <input asp-for="Enunciado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resposta">Resposta:</label>
        <input asp-for="Resposta" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MateriaId">Matéria:</label>
        <select asp-for="MateriaId" asp-items="@(new SelectList(ViewData["Materias"] as List<Materia>, "MateriaId", "Nome"))" class="form-control">
            <option value="">Selecione a Matéria</option>
        </select>
    </div>
    <input type="hidden" name="cardId" value=@Model.CardId>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
