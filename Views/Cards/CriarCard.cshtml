@model Card

<h2>Criar Card</h2>

<form asp-action="Criar">
    <div class="form-group">
        <label asp-for="Enunciado">Enunciado:</label>
        <input asp-for="Enunciado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Resposta">Resposta:</label>
        <input asp-for="Resposta" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MateriaId">Matéria:</label>
        <select asp-for="MateriaId" asp-items='new SelectList((IEnumerable<Materia>)ViewData["Materias"], "MateriaId", "Nome")'>
            <option disabled selected>-- Selecione uma matéria --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
