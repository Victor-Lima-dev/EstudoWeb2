@model Anotacao

@{
    ViewData["Title"] = "Detalhes da Anotação";
}

<form asp-action="DeletarT" method="post">
    <div class="container mt-5">
        <h1 class="mb-4">Detalhes da Anotação</h1>
        <input type="hidden" value=@Model.AnotacaoId name="anotacaoId">
    
        <div class="card">
            <div class="card-header">
                <h3>@Model.Titulo</h3>
            </div>
            <div class="card-body">
                <p>@Model.Conteudo</p>
                <p class="card-text"><small class="text-muted">Matéria: @Model.Materia.Nome</small></p>
            </div>
            <button type="submit">Apagar</button>
        </div>
</form>

</div>
