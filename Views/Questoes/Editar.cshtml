@model Questao

@{
    ViewData["Title"] = "Editar Questão";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarT">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="questaoId" value=@Model.QuestaoId />

            <div class="form-group">
                <label asp-for="Enunciado" class="control-label"></label>
                <textarea asp-for="Enunciado" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Enunciado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resposta" class="control-label"></label>
                <input asp-for="Resposta" class="form-control" />
                <span asp-validation-for="Resposta" class="text-danger"></span>
            </div>

            <select class="form-control" id="materiaId" name="materiaId" required>
            <option value="">Selecione uma matéria</option>
            @foreach (var materia in ViewData["Materias"] as List<Materia>)
            {
                <option value="@materia.MateriaId">@materia.Nome</option>
            }
        </select>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
